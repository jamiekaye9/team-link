<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teams</title>
    <link rel="stylesheet" href="/css/company.css">
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="pagediv">
        <h1>Teams</h1>
        <table class="table">
          <thead class="tablehead">
            <tr>
                <th class="tableheading">Team Name</th>
                <th class="tableheading">Team Size</th>
                <th class="tableheading">Total Salary (Â£)</th>
            </tr>
          </thead>
          <tbody class="tablebody">
            <% uniqueTeams = [...new Set(workers.map(worker => worker.team))];

            uniqueTeams.forEach((teamName) => { 
                const teamSize = workers.filter(worker => worker.team === teamName).length;
                const totalSalary = workers
                    .filter(worker => worker.team === teamName)
                    .reduce((sum, worker) => sum + worker.salary, 0);
        %>
            <tr class="tablerow">
                <td class="tabledata"><%= teamName %></td>
                <td class="tabledata"><%= teamSize %></td>
                <td class="tabledata"><%= totalSalary %></td>
            </tr>
        <% }) %>
          </tbody>
      </table>
    </div>
</body>
</html>